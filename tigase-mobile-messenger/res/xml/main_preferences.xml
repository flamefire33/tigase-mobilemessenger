            <intent android:action="android.settings.SYNC_SETTINGS" />
        </PreferenceScreen>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="autostart"
            android:summary="@string/pref_autostart_summary"
            android:title="@string/pref_autostart_title" />
            
    </PreferenceCategory>
